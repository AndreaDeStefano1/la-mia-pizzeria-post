@model List<Pizza>


<div class="container">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Ingredienti</th>
                        <th>Immagine</th>
                        <th>Prezzo</th>
                        <th>Azione</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {

                        @foreach (Pizza pizza in Model)
                        {
                            <tr>
                                <td>@pizza.Id</td>
                                <td>@pizza.Name</td>
                                <td>@pizza.Description</td>
                                <td><img src="@pizza.Image" /></td>
                                <td>@pizza.Price €</td>
                                <td><a class="btn btn-warning" href="@Url.Action("Show", "Pizza",new { Id = pizza.Id - 1 } )">Vedi</a></td>
                            </tr>
                        }


                    }
                    else
                    {
                        <tr>
                            <td></td>
                            <td>
                                <h2>No pizze presenti</h2>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
    

</div>